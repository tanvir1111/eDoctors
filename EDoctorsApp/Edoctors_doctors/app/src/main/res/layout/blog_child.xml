<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/blog_image_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:transitionName="headlineImageTransition"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/blog_headlines_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_red" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/blog_headline"

        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="দৈনিক প্রথম আলো"

        android:textSize="14sp"
        android:textStyle="bold"
        android:transitionName="headlineTransition"
        app:layout_constraintBottom_toBottomOf="@+id/blog_image_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/blog_image_card"
        app:layout_constraintTop_toTopOf="@+id/blog_image_card" />


    <View
        android:layout_width="0dp"

        android:layout_height="1dp"
        android:background="#70707070"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/blog_headline"
        app:layout_constraintStart_toStartOf="@+id/blog_image_card" />
</androidx.constraintlayout.widget.ConstraintLayout>